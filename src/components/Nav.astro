---
// library imports
import { Icon } from "astro-icon";

// component imports
import Link from "./Link.astro";

// data imports
import navData from "../data/navData";
---

<header>
  <div class="container">
    <nav class="navbar">
      <a href="/">
        <Icon name="logo-light" width="50" class="logo-light" />
        <Icon name="logo-light" width="50" class="logo-dark" />
      </a>

      <!-- <div class="btn-group">
        <button class="theme-btn theme-btn-mobile light">
