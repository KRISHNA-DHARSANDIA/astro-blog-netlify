<header>

  <div class="container">

    <nav class="navbar">

      <a href="/">
        <Icon name="logo-light" width="150" class="logo-light" />
      </a>
      
      <div class="btn-group">

        <button class="nav-menu-btn">
          <ion-icon name="menu-outline"></ion-icon>
        </button>

      </div>

      <div class="flex-wrapper">

        <ul class="desktop-nav">
            {
              navData.map((item) => (
                <Link
                  text={item.name}
                  href={item.path}
                  classes="nav-link"
                  isFilled={false}
                  data-navLink
                />
              ))
            }
        </ul>

        <button class="theme-btn theme-btn-desktop light">
          <ion-icon name="moon" class="moon"></ion-icon>
          <ion-icon name="sunny" class="sun"></ion-icon>
        </button>
      </div>

      <div class="mobile-nav">

        <button class="nav-close-btn">
          <ion-icon name="close-outline"></ion-icon>
        </button>

        <div class="wrapper">

          <p class="h3 nav-title">Main Menu</p>

          <ul>
            {
              navData.map((item) => (
                <Link
                  text={item.name}
                  href={item.path}
                  style="primary"
                  isFilled={false}
                  data-navLink
                />
              ))
            } 
          </ul>

        </div>

