            <iconify-icon icon="humbleicons:sun" class="sun" name="sun"></iconify-icon>
        </button>

        <button class="nav-menu-btn">
          <iconify-icon icon="ion:menu"></iconify-icon>
        </button>
      </div> -->

      <div class="btn-group">
        <!-- <button class="theme-btn theme-btn-mobile light">
          <ion-icon name="moon" class="moon"></ion-icon>
          <ion-icon name="sunny" class="sun"></ion-icon>
        </button> -->

        <button class="nav-menu-btn">
          <iconify-icon icon="ion:menu"></iconify-icon>
        </button>
      </div>

      <div class="flex-wrapper">
        <ul class="desktop-nav">
          {
            navData.map((item) => (
              <Link
                text={item.name}
                href={item.path}
                classes="nav-link"
                isFilled={false}
                data-navLink
              />
            ))
          }
        </ul>

        <button class="theme-btn theme-btn-desktop light">
          <iconify-icon icon="humbleicons:sun"></iconify-icon>
          <iconify-icon icon="akar-icons:moon-fill"></iconify-icon>
        </button>
      </div>

      <div class="mobile-nav">
        <button class="nav-close-btn">
          <iconify-icon icon="iconamoon:close-bold"></iconify-icon>
        </button>

        <div class="wrapper">
          <p class="h3 nav-title">Main Menu</p>

          <ul>
            {
              navData.map((item) => (
                <Link
                  text={item.name}
                  href={item.path}
                  classes="nav-link"
                  isFilled={false}
                  data-navLink
                />
              ))
            }
          </ul>
        </div>

